filetype plugin indent on
syntax on

set number
set relativenumber
set ruler
set wildmenu

set undodir=~/.vim/undo
set undofile
set directory=~/.vim/swapfiles//
set viminfo+=n~/.vim/viminfo

set tabstop=4
set softtabstop=4
set shiftwidth=4

set splitbelow
set splitright

colorscheme molokai
set background=dark

nnoremap j  gj
nnoremap k  gk
